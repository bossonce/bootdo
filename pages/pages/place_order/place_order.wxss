/* pages/pages/place_order/place_order.wxss */

.for_outbound>view>image{
  width: 14rpx;
	height: 25rpx;
  float: right;
  margin-top: 34rpx;
  margin-left: 20rpx;
}

checkbox .wx-checkbox-input{
    border-radius: 3rpx;
    height: 22rpx;
    width: 22rpx;
    margin-top: -4rpx;
    border: 1rpx solid #37bc9b;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  height: 22rpx;
    width: 22rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  background-color: #37bc9b;

border: 1rpx solid #37bc9b;
}

.for_outbound>view>button{
  width: 95rpx;
	height: 40rpx;
	background-color: #37bc9b;
	border-radius: 5rpx;
  float: right;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  padding: 0rpx;
  border: 0rpx;
  margin-top: 24rpx;
}

.for_outbound>.for_outbound_fixed{
  width: 660rpx;
  margin-left: -30rpx;
  padding-left: 30rpx;
}

.for_outbound_fixed1{
  overflow: initial;
}

.for_outbound_fixed1>.picture{
  width: 100%;
  padding: 26rpx 0rpx 40rpx 0rpx;
  overflow: hidden;
  height: auto;
}

.for_outbound_fixed1>.picture>view{
  width: 143rpx;
  height: 143rpx;
  float: left;
  margin-right: 20rpx;
}

.for_outbound_fixed1>.picture>view>image{
  width: 100%;
  height: 100%;
}

.for_outbound_fixed1>.picture>view:nth-child(4){
  margin-right: 0rpx;
}