/**index.wxss**/
.index {
  width: 690rpx;
  margin: auto;
  overflow: hidden;
}


.xinput{
  position: absolute;
  width: 100%;
  height: 100vh;
  background: #fff;
  opacity: 0.5;
  z-index: 100;
  top: 90rpx;
  left: 0rpx;
}

.shuffling_figure{
  width: 100%;
  height: 280rpx;

  margin-top:90rpx;
}

.shuffling_figure_img{
  width: 100%;
  height: 100%;
}

.lebale{
  width: 750rpx;
  margin-top: 39rpx;
  margin-left: -30rpx; 
  overflow: hidden;
}

.lebale>view{
  width: 25%;
  margin-bottom: 50rpx;
  float: left;
  text-align: center;
  height: 90rpx;
  color: #fff;
  font-size: 24rpx;
}

.lebale>view>image{
  display: block;
  width: 50rpx;
  height: 48rpx;
  margin:0rpx auto 20rpx auto;
}

.recommended>view{
  color: #7f9fdc;
  font-size: 24rpx;
  float: right;
  line-height: 55rpx;
}

.recommended>view>image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 10rpx;
  vertical-align:middle;
}

.recommended>span{
  font-size: 36rpx;
  background-image:-webkit-linear-gradient(bottom,#3ec9e6,#3b71de); 
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent; 
}