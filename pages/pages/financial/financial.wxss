/* pages/pages/financial/financial.wxss */
page{
  overflow: hidden;
}

.financial{
  width: 690rpx;
	height: 330rpx;
	border-radius: 16rpx;
  margin: 40rpx auto 25rpx auto;
  background-size: 100% 100%;
  overflow: hidden;
}

.financial_time{
  margin: 35rpx 0rpx 0rpx 30rpx;
  color: #fff;
  font-size: 22rpx;
}

.financial_time>span{
  font-size: 30rpx;
}

.financial_many{
  padding-top: 14rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx dashed #fff;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}

.financial_many>view{
  font-size: 48rpx;
}

.financial_number{
  width: 100%;
  overflow: hidden;
  color: #fff;
  font-size: 22rpx;
}

.financial_number>view{
  width: 33.333333333333%;
  float: left;
  text-align: center;
  line-height: 82rpx;
}

.financial_number>view>view{
  font-size: 24rpx;
  line-height: 36rpx;
  margin-top: -18rpx;
}

.financial_bottom{
  width: 690rpx;
	background-color: #1a2843;
	box-shadow: 0px 1rpx 27rpx 0rpx 
		rgba(3, 0, 0, 0.1);
	border-radius: 16rpx;
  height: auto;
  overflow: hidden;
  margin: auto;
  padding-bottom: 40rpx;
}

.financial_bottom>view{
  width: 630rpx;
  margin: auto;
  height: 110rpx;
  border-bottom: 1rpx solid #293c60;
  font-size: 30rpx;
  color: #7f9fdc;
  line-height: 110rpx;
}

.financial_bottom>view>image{
  width: 28rpx;
  height: 31rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}

.financial_bottom>view>image:nth-child(2){
  width: 14rpx;
	height: 25rpx;
  float: right;
  margin-top: 44rpx;
  margin-right: 0rpx;
}

.but{
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
}