/* pages/pages/activity/activity.wxss */

.for_outbound1{
padding-bottom: 80rpx;
}

.for_outbound,.for_outbound1{
  width: 690rpx;
  background: #1a2843;
  border-radius: 15rpx;
  margin: 0rpx auto 20rpx auto;
  padding: 0rpx 20rpx;
}

.for_outbound>view{
  height: 94rpx;
  line-height: 94rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: right;
}

.for_outbound>view>image{
  float: left;
  width: 29rpx;
  height: 29rpx;
  margin-top: 36rpx;
  margin-right: 14rpx;
}

.for_outbound>.account_an{
  overflow: hidden;
  padding-bottom: 29rpx;
  width: 100%;
  border-bottom: 1rpx solid #293c60;
  height: auto;
}

.account_an>view{
  text-align: left;
  line-height: 32rpx;
}

.account_an>button{
  color: #fefefe;
  padding: 20rpx 43rpx;
  line-height: 32rpx;
  border-radius: 65rpx;
  margin-right: 0rpx;
}

.cancel{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #111a2b;
  top: 0rpx;
  left: 0rpx;
}

.cancel1{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  margin: auto;
  width: 570rpx;
	height: 268rpx;
  background-color: #ffffff;
	border-radius: 15rpx;
  margin-left: -1rpx;
}

.cancel1>view{
  font-size: 30rpx;
  color: #333333;
  height: 116rpx;
  text-align: center;
  line-height: 116rpx;
  border-bottom: 1rpx solid #eeeeee
}

.cancel1>button{
  float: left;
  width: 284rpx;
  padding: 0rpx;
  border-radius: 0rpx;
  background: #fff;
  border-left: 1rpx solid #eeeeee;
  height: 111rpx;
  margin: 27rpx 0rpx 14rpx 0rpx;

  font-size: 28rpx;
  color: #333333;
  line-height: 111rpx;
}

.cancel1>button::after {
  border: 0rpx;
  border-radius: 0rpx;
}

.cancel1>button:nth-child(2)>span{
  margin-left: 83rpx;
  display: block;
}

.cancel1>button:nth-child(3)>span{
  display: block;
  margin-right: 83rpx;
}