/* pages/pages/my/my.wxss */

.head_portrait {
  width: 750;
  height: 354rpx;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}

.head_portrait_background {
  width: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: -1;
}

.head_portrait>view {
  width: 690rpx;
  height: 100%;
  margin: auto;
  overflow: hidden;
}

.head_portrait_view_top {
  margin: 70rpx 0rpx 0rpx 30rpx;
  overflow: hidden;
}

.head_portrait_view_top_picture {
  float: left;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.head_portrait_view_top_picture>image {
  width: 100%;
  height: 100%;
}

.head_portrait_view_top_view {
  float: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.head_portrait_view_top_view>text {
  display: block;
  color: #fff;
  font-size: 26rpx;
  line-height: 38rpx;
}

.head_portrait_view_top_view>text:nth-child(1) {
  font-size: 30rpx;
}

.head_portrait_view_bottom {
  width: 690rpx;
  height: 125rpx;
}

.head_portrait_view_bottom>button {
  width: 50%;
  float: left;
  height: 100%;
  font-size: 28rpx;
  color: #fff;
  padding: 0rpx;
  border: 0rpx;
  line-height: 125rpx;
  background: transparent;
  border-radius: 0rpx;
}

.head_portrait_view_bottom>button>image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

button::after {
  border: 0rpx;
}

.order {
  width: 690rpx;
  margin: auto;
  margin-top: 20rpx;
  background-color: #1a2843;
  box-shadow: 0rpx 1rpx 27rpx 0rpx rgba(3, 0, 0, 0.1);
  border-radius: 16rpx;

}

.order>view{
  width: 100%;
  overflow: hidden;
}

.order_top{
  height: 110rpx;
  width: 662rpx;
  color: #fff;
  text-align: right;
  line-height: 110rpx;
  margin-left: 28rpx;
}

.order_top>span{
  color: #7f9fdc;
  display: inline-block;
  float: left;
  height: 100%;

}

.order_top>image{
  float: right;
  width: 13rpx;
	height: 24rpx;
  margin-right: 30rpx;
  margin-top: 42rpx;
  margin-left: 14rpx;
}

.order_view{
  width: 100%;
  overflow: hidden;
}

.order_view>view{
  width: 25%;
  float: left;
  text-align: center;
  color: #ffffff;
  height: 136rpx;
  font-size: 26rpx;
}

.order_view>view>image{
  width: 52rpx;
  height: 53rpx;
  display: block;
  margin: auto;
  margin-bottom: 17rpx;
}

.order>i{
  width: 632rpx;
	height: 1rpx;
	background-color: #293c60;
  margin: auto;
  display: block;
}

.order-list{
  height: 96rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 96rpx;
  width: 100%;
}

.order-list>view{
  display: inline-block;
  float: left;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.order-list>view>image{
 width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.order-list>image{
  width: 13rpx;
	height: 24rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 34rpx;
}