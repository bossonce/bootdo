/* pages/pages/permissions/permissions.wxss */

.permissions {
  height: 128rpx;
  width: 100%;
}

.permissions>view {
  width: 50%;
  height: 100%;
  float: left;
  font-size: 30rpx;
  text-align: center;
  line-height: 128rpx;
}

.permissions>view>text {
  color: #7f9fdc;
}

.permissions>view>.view_text {
  color: #fff;
}

.permissions>view>.view_i {
  width: 60rpx;
  height: 4rpx;
  background-color: #3ec9e6;
  display: block;
  margin: -25rpx auto 0rpx auto;
}

.for_outbound>view>image {
  width: 14rpx;
  height: 25rpx;
}

.for_outbound>.members_of>span:nth-child(1) {
  color: #fff;
}

.for_outbound>.members_of>span:nth-child(2) {
  color: #b1bdf5;
}

.for_outbound>.members_of>span:nth-child(3) {
  color: #37bc9b;
}

.for_outbound>.members_of>view {
  float: right;
  display: inline-block;
  height: 100%;
  line-height: 93rpx;
  margin-right: -20rpx;
  overflow: hidden;
}

.for_outbound>.members_of>view>button {
  width: auto;
  display: inline-block;
  border-right: 1rpx solid #466cb5;
  padding-right: 20rpx;
  vertical-align: middle;
  background: transparent;
  height: 23rpx;
  border-radius: 0rpx;
  line-height: 0rpx;
}

.for_outbound>.members_of>view>button>image {
  width: 23rpx;
  height: 23rpx;
  vertical-align: middle;
}

.position {
  width: 690rpx;
  margin: 32rpx auto 0rpx auto;
  font-size: 30rpx;
  background-color: #1a2843;
  box-shadow: 0rpx 1rpx 27rpx 0rpx rgba(3, 0, 0, 0.1);
  border-radius: 16rpx;
}

.position>view {
  width: 630rpx;
  margin: auto;
  border-bottom: 1rpx solid #293c60;
  height: 110rpx;
  line-height: 110rpx;
  color: #fff;
  text-align: right;
}

.position>view>image {
  width: 19rpx;
  height: 19rpx;
  vertical-align: middle;
  margin-right: 5rpx;
}

.position>view>span {
  color: #7f9fdc;
  float: left;
  height: 100%;
  line-height: 110rpx;
}

.for_outbound>view>image {
  width: 25rpx;
  height: 14rpx;
  float: right;
  margin-left: 20rpx;
  margin-top: 42rpx;
}

.position1 {
  width: 690rpx;
  margin: 20rpx auto 0rpx auto;
}

.position1>view {
  width: 33.333333333333%;
  display: inline-block;
  vertical-align: top;
  height: 705rpx;
}

.position1>view:nth-child(1), .position1>view:nth-child(3) {
  background-color: #1a2843;
  box-shadow: 0rpx 1rpx 27rpx 0rpx rgba(3, 0, 0, 0.1);
  overflow-y:auto;
  overflow-x:hidden;
  

}

.position1>view>view {
  width: 100%;
  /* display: -webkit-box;
  /* overflow-x: hidden; */
  /* -webkit-overflow-scrolling: touch; */
  overflow-y: scroll;
  overflow-scrolling: touch;
}

.position1>view>view>view {
  color: #7f9fdc;
  text-align: center;
  line-height: 70rpx;
  padding-top: 21rpx;
  width: 100%;
}

.for_outbound>view, .position>.for_outbound {
  border: 0rpx;
}

.position1>view:nth-child(2) {
  position: relative;
  overflow: hidden;
}

.position1>view:nth-child(2)>view {
  position: absolute;
  width: 100%;
  height: 250rpx;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  margin: auto;
  overflow: hidden;
}

.position1>view:nth-child(2)>view>image {
  width: 52rpx;
  height: 26rpx;
  display: block;
  margin: 17rpx auto;
}

.position1>view:nth-child(2)>view>image:nth-child(3) {
  margin: 55rpx auto 24rpx auto;
}

.position1>view:nth-child(2)>view>button {
  width: 94rpx;
  height: 51rpx;
  background-image: linear-gradient(94deg, #2167ef 0%, #3790ef 100%),
                      linear-gradient(#0059a7, #0059a7);
  background-blend-mode: normal, normal;
  border-radius: 8rpx;
  font-size: 30rpx;
  padding: 0rpx;
  line-height: 51rpx;
  color: #fff;
}
