.none{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #1a2843;
	box-shadow: 0rpx 1rpx 27rpx 0rpx 
		rgba(3, 0, 0, 0.1);
  z-index: 10;
}

.none1{
  width: 300rpx;
  height: 320rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  margin: auto;
  text-align: center;
  font-size: 20rpx;
  color: #bbbbbb;
}

.none1>image{
  width: 300rpx;
	height: 255rpx;
  display: block;
  margin: auto;
  margin-bottom: 50rpx;
}