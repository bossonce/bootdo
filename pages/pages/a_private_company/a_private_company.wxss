/**index.wxss**/
.index {
  width: 690rpx;
  padding: 0rpx 30rpx; 
  background: #111a2b;
  overflow: hidden;
  margin-bottom: 120rpx;
}

.xinput{
  position: absolute;
  width: 100%;
  height: 100vh;
  background: #fff;
  opacity: 0.5;
  z-index: 100;
  top: 90rpx;
  left: 0rpx;
}

.shuffling_figure{
  width: 100%;
  height: 280rpx;

  margin-top:90rpx;
}

.shuffling_figure_img{
  width: 100%;
  height: 100%;
}

.lebale{
  width: 750rpx;
  margin-top: 39rpx;
  margin-left: -30rpx; 
  overflow: hidden;
}

.lebale>view{
  width: 25%;
  margin-bottom: 50rpx;
  float: left;
  text-align: center;
  height: 90rpx;
  color: #fff;
  font-size: 24rpx;
}

.lebale>view>image{
  display: block;
  width: 50rpx;
  height: 48rpx;
  margin:0rpx auto 20rpx auto;
}

.recommended>view{
  color: #7f9fdc;
  font-size: 24rpx;
  float: right;
}

.recommended>view>image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 20rpx;
  vertical-align:middle;
}

.recommended>span{
  font-size: 36rpx;
  background-image:-webkit-linear-gradient(bottom,#3ec9e6,#3b71de); 
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent; 
}

.recommend_zone{
  width: 690rpx;
  margin:46rpx auto 0rpx auto;
  overflow: hidden;
}

.recommend_zone_view{
  width: 690rpx;
	height: 220rpx;
	background-color: #1a2843;
	box-shadow: 0rpx 1rpx 27rpx 0rpx 
		rgba(3, 0, 0, 0.1);
	border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.recommend_zone_view>image{
  width: 235rpx;
  height: 160rpx;
  margin: 30rpx 20rpx 0rpx 30rpx;
  float: left;
}

.recommend_zone_view>view{
  height: 160rpx;
  width: 365rpx;
  float: left;
  margin-top: 30rpx;
}

.recommend_zone_view>view>view{
  font-size: 32rpx;
  color: #fff;
}

.recommend_zone_view_label{
    margin-top: 20rpx;
    width: 100%;
    height: 50rpx;
    display: -webkit-box;
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
    overflow-y: hidden;
    overflow-scrolling: touch;
}

.recommend_zone_view_label_view{
  font-size: 22rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  background: #37bc9b;
  height: 28rpx;
  margin-right: 10rpx;
  border-radius: 3rpx;
}

.positioning{
  margin-top: 30rpx;
}

.positioning>span{
  font-size: 22rpx;
  color: #6288cc;
  margin-right: 8rpx;
}

.positioning>image{
  width: 18rpx;
	height: 23rpx;
  vertical-align: middle;
}

.company_financial{
  width: 690rpx;
	background-color: #1a2843;
	box-shadow: 0rpx 1rpx 27rpx 0rpx 
		rgba(3, 0, 0, 0.1);
	border-radius: 16rpx;
  overflow: hidden;
  margin: auto;
}

.company_financial_name{
  font-size: 36rpx;
  margin: 30rpx 0rpx 40rpx 20rpx;
  background-image:-webkit-linear-gradient(bottom,#3ec9e6,#3b71de);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
}

.company_financial_view{
  width: 650rpx;
	height: 300rpx;
	border-radius: 16rpx;
  overflow: hidden;
  background-size: 100% 100%;
  margin: 0rpx auto 40rpx auto;
}

.company_financial_view_time{
  font-size: 30rpx;
  color: #fff;
  margin-left: 30rpx;
  margin-top: 40rpx;
}

.company_financial_view_title{
  font-size: 24rpx;
  color: #fff;
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.company_financial_view_yuan{
  width: 575rpx;
  height: 77rpx;
  margin:65rpx auto 0rpx auto;
}

.company_financial_view_yuan>view{
  width: 285rpx;
  height: 100%;
  float: left;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}

.company_financial_view_yuan>view>view{
  font-size: 36rpx;
  color: #fff;
  margin-top: 7rpx;
}

.company_financial_view_yuan>span{
  float: left;
  width: 3rpx;
  height: 77rpx;
  background: #fff;

}